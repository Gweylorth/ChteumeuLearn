extends layout

block content
  h1 Tableau de bord
  div.dashboardContent
    div.exam
      article
        form(action=('/questionTest'))
          fieldset
            legend Test Rapide
          button(name='quickTestButton', type='submit') Commencer
            img(src='images/pin.png')
      article
        form.getExam(action='/dashboard' method="POST")
          fieldset
            legend Exam
            label(for='testDomain') Domaine:
            select#domainSelect(name="testDomain", multiple)
              each val, name in {html: 'HTML5' ,css: 'CSS3' ,javascript: 'JavaScript'}
                option.selectOptions(name = name)=val
            br
            label(for="questionNumber") Nombre de questions:
            br
            input#questionCount(type="range", step="1", min="1", max=maxQuestions, name='numQuestionSelected')
            span#selectedQuestionCount 0
            | /
            span#maxQuestionCount #{maxQuestions}
            br
            button#finalTestButton(type="submit")
              img(src="images/pin.png")
              | Commencer


    aside
      h1 Statistiques
      p
        span#testStats Note cumulative tests : 0/0
        br
        | Examens pass&#233;s :
        span#examCount 0
        br
        a(href="#details")
          button(name="getDetails")
            | Details
            img(src="images/pin.png")
        button#resetStats
          | R&#224;Z
          img(src="images/pin.png")

  #details.modal
    figure
      a.closemodal(href="#")
      figcaption
        h1 Details
        table#detailsTable
          tr
            th Examen
            th Note
            th Domaines
