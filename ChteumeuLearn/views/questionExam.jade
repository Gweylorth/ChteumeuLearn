extends questionLayout

block question
    h1 Examen
    article
      span.questionExam #{randomQuestionExam.question}
      br
      span R&#233;ponses:
      br
      form#nextQuestionExam.nextQuestion(action='/questionExam', method=method)
        each answer,i in randomQuestionExam.answers 
          -if(i==checkedAnswer && i==correct)
            input(id=i, type='radio', name ='answer', value=i, checked='checked')
            span(id=i, class="underlineGreen") #{answer}
            br
          - else if(i==checkedAnswer && i != correct)
            input(id=i, type='radio', name ='answer', value=i, checked='checked')
            span(id=i,class="underlineRed") #{answer}
            br
          -else if(i==correct && i!=checkedAnswer)
            input(id=i, type='radio', name ='answer', value=i)
            span(id=i,class="underlineGreen") #{answer}
            br
          -else
            input(id=i, type='radio', name ='answer', value=i)
            span(id=i) #{answer}
            br
        br
        button#buttonNext(type="submit")
          img(src="images/pin.png")
          | #{button}
      button#forfeitExam
        img(src="images/pin.png")
        | Abandonner